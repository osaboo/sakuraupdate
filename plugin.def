;O[1].Select=GitHub:0|SourceForge:1|Custom:2
;O[1].Default=0

O[1].Key=SAKURAURL
O[1].Label=サクラエディタ本体のリリースURL
O[1].Type=Str
O[1].Default=https://sourceforge.net/projects/sakura-editor/rss
;O[1].Default=https://api.github.com/repos/sakura-editor/sakura/releases/latest
;?path=/sakura2
;?path=/help2
;?path=/wiki

O[2].Key=HELPURL
O[2].Label=ヘルプファイルのリリースURL
O[2].Type=Str
O[2].Default=https://sourceforge.net/projects/sakura-editor/rss?path=/help2

O[3].Key=REGEXPURL
O[3].Label=正規表現ツールのリリースURL
O[3].Type=Str
O[3].Default=https://sourceforge.net/projects/sakura-editor/rss?path=/wiki
;O[3].Default=https://github.com/k-takata/bregonig/releases
;O[3].Default=http://k-takata.o.oo7.jp/mysoft/bregonig.html
;O[3].Default=https://bitbucket.org/k_takata/bregonig/downloads/
;O[3].Default=https://api.bitbucket.org/2.0/repositories/k_takata/bregonig/downloads

;https://github.com/sakura-editor/bregexp/releases

;O[3].Key=GITHUBURL
;O[3].Label=GitHub sakura Release URL(API)
;O[3].Type=Str
;O[3].Default=https://api.github.com/repos/sakura-editor/sakura/releases/latest

;O[4].Key=BREGONIGURL
;O[4].Label=GitHub bregonig Release URL(API)
;O[4].Type=Str
;O[4].Default=https://github.com/k-takata/bregonig/releases

;O[5].Key=CUSTOMURL
;O[5].Label=Custom Distribution URL(file:// or http://)
;O[5].Type=Str
;O[5].Default=file://hogehoge/share/sakura

O[4].Key=UPDATEURL
O[4].Label=プラグインのリリースURL
O[4].Type=Str
O[4].Default=https://github.com/osaboo/sakuraupdate/releases

O[5].Key=LASTCHECK
O[5].Label=最近の更新チェック日
;Date of last update check
O[5].Type=Str

O[6].Key=CHECKFREQ
O[6].Label=更新チェックの頻度(単位=日、空白=自動チェックしない)
;Frequency of update check (unit=day. null=stop auto check)
O[6].Type=Str
O[6].Default=7

O[7].Key=DEBUGLVL
O[7].Label=Debug Level (0=NODEBUG)
O[7].Type=Str
O[7].Default=0

[Plug]
EditorStart=UpdateCheck.vbs
