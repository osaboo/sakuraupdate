[Plugin]
Id=SoftwareUpdate
Name=ソフトウェアの更新(&W)
Description=SakuraEditorを自動更新します
Type=wsh
Version=0.5
Url=
Author=osaboo

[Command]
C[1]=CheckOnDemand.vbs
C[1].Label=更新チェック(&C)
C[2]=AllUpdate.vbs
C[2].Label=まとめて更新(&S)
C[3]=SakuraUpdate.vbs
C[3].Label=サクラエディタ更新(&S)
C[4]=HelpUpdate.vbs
C[4].Label=ヘルプファイル更新(&H)
C[5]=RegexpUpdate.vbs
C[5].Label=正規表現ライブラリ更新(&R)
C[6]=PluginUpdate.vbs
C[6].Label=更新プラグインの更新(&U)

[Option]
O[1].Section=サクラエディタ

;O[1].Key=DOWNLOADSITE
;O[1].Label=ダウンロードサイト
