;プラグイン定義ファイルv1
[Plugin]
Id=SoftwareUpdate
Name=ソフトウェアの更新(&W)
Description=SakuraEditorを自動更新します
Type=wsh
Version=v20190402
Url=https://github.com/osaboo/sakuraupdate/
Author=osaboo

[Command]
C[1]=CheckOnDemand.vbs
C[1].Label=更新チェック(&C)
C[2]=SakuraUpdate.vbs
C[2].Label=サクラエディタ更新(&S)
C[3]=HelpUpdate.vbs
C[3].Label=ヘルプファイル更新(&H)
C[4]=RegexpUpdate.vbs
C[4].Label=正規表現ライブラリ更新(&R)
C[5]=DiffUpdate.vbs
C[5].Label=DIFF更新(&D)
C[6]=CtagsUpdate.vbs
C[6].Label=CTAGS更新(&T)
C[7]=PluginUpdate.vbs
C[7].Label=このプラグインの更新(&U)

[Option]
O[1].Section=サクラエディタ

O[1].Key=SITEPRIORITY
O[1].Label=ダウンロードサイト
O[1].Type=Sel
O[1].Select=GitHub:0|SourceForge:1|OSDN:2|Custom:3
O[1].Default=0

O[2].Key=SFRSSURL
O[2].Label=sourceforgeのsakura-edtiorプロジェクトRSS
O[2].Type=Str
O[2].Default=https://sourceforge.net/projects/sakura-editor/rss
;?path=/sakura2
;?path=/help2
;?path=/wiki

O[3].Key=OSDNURL
O[3].Label=OSDNのSakura Editor Downloads RSS
O[3].Type=Str
O[3].Default=https://osdn.net/projects/sakura-editor/releases/rss

O[4].Key=GITHUBURL
O[4].Label=GitHub sakura-editor Release URL(API)
O[4].Type=Str
O[4].Default=https://api.github.com/repos/sakura-editor/sakura/releases/latest

O[5].Key=USEPREREL
O[5].Label=プレリリース版のダウンロード有無
O[5].Type=Sel
O[5].Select=未設定:0|プレリリースもダウンロード:1|リリース版のみ:2
O[5].Default=0

O[6].Key=HELPURL
O[6].Label=ヘルプファイルのリリースURL(未指定時はSFから自動取得)
O[6].Type=Str
O[6].Default=https://sourceforge.net/projects/sakura-editor/rss?path=/help2

O[7].Key=REGEXPURL
O[7].Label=正規表現ライブラリのリリースURL(未指定時はSFから自動取得)
O[7].Type=Str
O[7].Default=https://api.bitbucket.org/2.0/repositories/k_takata/bregonig/downloads
;O[7].Default=https://sourceforge.net/projects/sakura-editor/rss?path=/wiki
;O[7].Default=https://github.com/k-takata/bregonig/releases
;O[7].Default=http://k-takata.o.oo7.jp/mysoft/bregonig.html
;O[7].Default=https://bitbucket.org/k_takata/bregonig/downloads/

O[8].Key=DIFFURL
O[8].Label=DIFFのリリースURL(未指定時は取得しない)
O[8].Type=Str
O[8].Default=http://www.ring.gr.jp/archives/text/TeX/ptex-win32/w32/patch-diff-w32.zip

O[9].Key=CTAGSURL
O[9].Label=CTAGSのリリースURL(未指定時は取得しない)
O[9].Type=Str
O[9].Default=http://hp.vector.co.jp/authors/VA025040/ctags/
;O[9].Default=https://sourceforge.net/projects/ctags/rss?path=/ctags

O[10].Key=CUSTOMURL
O[10].Label=独自リリース用URL(file:// or http://)
O[10].Type=Str
O[10].Default=file://hogehoge/share/sakura

O[11].Key=PLUGINURL
O[11].Label=プラグインのリリースURL
O[11].Type=Str
O[11].Default=https://api.github.com/repos/osaboo/sakuraupdate/releases

O[12].Key=LASTCHECK
O[12].Label=最近の更新チェック日
;Date of last update check
O[12].Type=Str

O[13].Key=CHECKFREQ
O[13].Label=更新チェックの頻度(単位=日、空白=自動チェックしない)
;Frequency of update check (unit=day. null=stop auto check)
O[13].Type=Str
O[13].Default=7

O[14].Key=DEBUGLVL
O[14].Label=Debug Level (0=NODEBUG)
O[14].Type=Str
O[14].Default=0

[Plug]
EditorStart=UpdateCheck.vbs
