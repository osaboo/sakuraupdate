'    日付変換
Function YYYYMMDD(aDT)
    On Error Resume Next
    YYYYMMDD = "00000000"
    If IsDate(aDT) Then
        YYYYMMDD = Right("0000" & Year(aDT), 4) & Right("00" & Month(aDT), 2) & Right("00" & Day(aDT), 2)
    End If
End Function

'   時刻変換
Function HHNNSS(aDT)
    On Error Resume Next
    HHNNSS = "000000"
    HHNNSS = Right("00" & Hour(aDT), 2) & Right("00" & Minute(aDT), 2) & Right("00" & Second(aDT), 2)
End Function

