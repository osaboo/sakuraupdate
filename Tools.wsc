    End If
    
    If aver = "" Then
        If amode = 2 Then log "最新版を確認できませんでした。", 0
        HelpCheck = False
        Exit Function
    End If
    
    aurl = wurl
    
    'If amode = 2 Then log "現在のサクラエディタのバージョン:" & wsakuraver, 0
