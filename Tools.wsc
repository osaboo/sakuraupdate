    If amode = 2 Then log "最新のヘルプファイル発行日付:" & aver, 0

    If aver <= wcurdate Then
        If amode = 2 Then log "●ヘルプファイルは最新バージョンです。", 0
        HelpCheck = False
        Exit Function
    End If

    log "★ヘルプファイルの新バージョンがリリースされています。", 0
    
    HelpCheck = True
End Function

